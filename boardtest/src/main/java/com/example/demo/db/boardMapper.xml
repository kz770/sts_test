<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
  <select id="findAll" resultType="boardVO">
    select * from board order by no
  </select>
  
  <insert id="insert" parameterType="boardVO">
  	insert into board values(seq_board.nextval,#{title},#{writer},#{content},sysdate,#{ip},0,#{fname},#{fsize},#{pwd})
  </insert>
  
  <select id="findByNo" resultType="boardVO">
  	select * from board where no=#{no}
  </select>
  
  <delete id="delete">
  	delete from board where no=#{no} and pwd=#{pwd}
  </delete>
  
  <update id="updateById" parameterType="boardVO">
  	update board set title=#{title}, content=#{content},fname=#{fname},fsize=#{fsize} where no=#{no} and pwd=#{pwd}
  </update>
</mapper>